extends layouts/main 

block contents 
    .form-container
        form(action=routes.videos+routes.editVideo, method="post")
            input(type="text", name="title", placeholder="Title", value=video.title)
            textarea(name="description",placeholder="description", cols="30", rows="10")=video.description
            input(type="submit", value="edit video!")
    a.form-container__link.form-container__link--delete(href=routes.deleteVideo(video.id)) Delete video
    